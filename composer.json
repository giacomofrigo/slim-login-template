{
    "require": {
        "php": ">=7.3",
        "slim/slim": "4.*",
        "slim/psr7": "^1",
        "php-di/php-di": "^6",
        "php-di/slim-bridge": "^3",
        "monolog/monolog": "^2",
        "doctrine/orm": ">=2.8.4",
        "vlucas/phpdotenv": "^5"
    },

    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },

    "scripts": {

        "start": "php -S localhost:5000 -t public public/index.php"
    }
}